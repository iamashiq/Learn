<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Struts</display-name>


	<filter>
		<filter-name>StudentAuthFilter</filter-name>
		<filter-class>StudentAuthFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>StudentAuthFilter</filter-name>
		<url-pattern>/student.do</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>TeacherAuthFilter</filter-name>
		<filter-class>TeacherAuthFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>TeacherAuthFilter</filter-name>
		<url-pattern>/teacher.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>TeacherAuthFilter</filter-name>
		<url-pattern>/addmark.do</url-pattern>
	</filter-mapping>
		
	<filter-mapping>
		<filter-name>TeacherAuthFilter</filter-name>
		<url-pattern>/getStudentsByClassId.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>TeacherAuthFilter</filter-name>
		<url-pattern>/submitmark.do</url-pattern>
	</filter-mapping>	
	
	<filter>
		<filter-name>AdminAuthFilter</filter-name>
		<filter-class>AdminAuthFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/admin.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/adduser.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/submituser.do</url-pattern>
	</filter-mapping>
	
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/allocate.do</url-pattern>
	</filter-mapping>
	
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/getCoursesByDepartmentId.do</url-pattern>
	</filter-mapping>
	
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/submitallocation.do</url-pattern>
	</filter-mapping>
	
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/addcourse.do</url-pattern>
	</filter-mapping>	
		
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/addcourse.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/submitcourse.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/addcourse.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/addcourse.do</url-pattern>
	</filter-mapping>
		
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/addentity.do</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AdminAuthFilter</filter-name>
		<url-pattern>/submitentity.do</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>



</web-app>